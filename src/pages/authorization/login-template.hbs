<div class="{{styles.container}}">
    <div class="{{styles.block}}">
        <div class="{{styles.title}}">
            <h3>Вход</h3>
        </div>
        <div>
            {{>
                Field
                    id="login"
                    placeholder="Логин"
                    type="text"
                    label="Логин"
                    error=state.errors.login
                    value=state.data.login
                    dataset="login"
            }}
            {{>
                Field
                    id="password"
                    placeholder="Пароль"
                    type="password"
                    label="Пароль"
                    error=state.errors.password
                    value=state.data.password
                    dataset="password"
            }}
        </div>
        <div class="{{styles.buttons}}">
            {{>
                Button
                    id="to-registration"
                    text="Зарегистрироваться"
                    class=styles.button
                    data-page=page
            }}
        </div>
    </div>
</div>
