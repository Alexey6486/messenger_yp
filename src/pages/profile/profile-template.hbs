<div class="{{styles.container}}">
    <div class="{{styles.left}}">
        {{>
        ButtonRound
            id=''
            type=pageLinks.main
            partialName=icons.arrowLeft.partialName
            partialType=icons.arrowLeft.partialType
        }}
    </div>
    <div class="{{styles.right}}">
        <div class="{{styles.content}}">
            <div class="{{styles.avatar}}">
                <div class="{{styles.image}}">
                    <div class="{{styles.mask}}">
                        Поменять аватар
                    </div>
                </div>
                <div class="{{styles.name}}">{{state.user.first_name}}</div>
            </div>
            <div class="{{styles.fields}}">
                <form>
                    {{#if state.isPasswordEdit}}
                        <div class="{{styles.block}}">
                            {{>
                            ProfileField
                                class=styles
                                id="oldPassword"
                                fieldName="Старый пароль"
                                value=state.passwordForm.fields.oldPassword
                                dataset="oldPassword"
                            }}
                        </div>
                        <div class="{{styles.block}}">
                            {{>
                            ProfileField
                                class=styles
                                id="newPassword"
                                fieldName="Новый пароль"
                                value=state.passwordForm.fields.newPassword
                                dataset="newPassword"
                            }}
                        </div>
                        <div class="{{styles.block}}">
                            {{>
                            ProfileField
                                class=styles
                                id="confirmPassword"
                                fieldName="Повторите новый пароль"
                                value=state.passwordForm.fields.confirmPassword
                                dataset="confirmPassword"
                            }}
                        </div>
                    {{else}}
                        <div class="{{styles.block}}">
                            {{>
                            ProfileField
                                class=styles
                                id="email"
                                fieldName="Почта"
                                value=state.userForm.fields.email
                                isDisabled=isEditDisabled
                                dataset="email"
                            }}
                        </div>
                        <div class="{{styles.block}}">
                            {{>
                            ProfileField
                                class=styles
                                id="login"
                                fieldName="Логин"
                                value=state.userForm.fields.login
                                isDisabled=isEditDisabled
                                dataset="login"
                            }}
                        </div>
                        <div class="{{styles.block}}">
                            {{>
                            ProfileField
                                class=styles
                                id="first_name"
                                fieldName="Имя"
                                value=state.userForm.fields.first_name
                                isDisabled=isEditDisabled
                                dataset="first_name"
                            }}
                        </div>
                        <div class="{{styles.block}}">
                            {{>
                            ProfileField
                                class=styles
                                id="second_name"
                                fieldName="Фамилия"
                                value=state.userForm.fields.second_name
                                isDisabled=isEditDisabled
                                dataset="second_name"
                            }}
                        </div>
                        <div class="{{styles.block}}">
                            {{>
                            ProfileField
                                class=styles
                                id="display_name"
                                fieldName="Имя в чате"
                                value=state.userForm.fields.display_name
                                isDisabled=isEditDisabled
                                dataset="display_name"
                            }}
                        </div>
                        <div class="{{styles.block}}">
                            {{>
                            ProfileField
                                class=styles
                                id="phone"
                                fieldName="Телефон"
                                value=state.userForm.fields.phone
                                isDisabled=isEditDisabled
                                dataset="phone"
                            }}
                        </div>
                    {{/if}}
                </form>
            </div>
            <div class="{{styles.buttons}}" id="{{ids.buttons}}">
                {{#if state.isDataEdit}}
                    <div class="{{styles.buttons-center}}">
                        {{>
                        Button
                            id=ids.saveData
                            type=datasets.account
                            text='Сохранить'
                        }}
                    </div>
                    <div class="{{styles.buttons-center}}">
                        {{>
                        Button
                            id=ids.cancel
                            type=datasets.account
                            text='Отмена'
                        }}
                    </div>
                {{else if state.isPasswordEdit}}
                    <div class="{{styles.buttons-center}}">
                        {{>
                        Button
                            id=ids.cancel
                            type=datasets.account
                            text='Сохранить'
                        }}
                    </div>
                    <div class="{{styles.buttons-center}}">
                        {{>
                        Button
                            id=ids.cancel
                            type=datasets.account
                            text='Отмена'
                        }}
                    </div>
                {{else}}
                    <div class="{{styles.block}}">
                        <div id="{{ids.changeData}}" data-btn="{{datasets.account}}" class="{{styles.button-link}}">Изменить данные</div>
                    </div>
                    <div class="{{styles.block}}">
                        <div id="{{ids.changePassword}}" data-btn="{{datasets.account}}" class="{{styles.button-link}}">Изменить пароль</div>
                    </div>
                    <div class="{{styles.block}}">
                        <div id="{{ids.logout}}" data-btn="{{datasets.account}}" class="{{styles.button-link}} {{styles.red}}">Выйти из аккаунта</div>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>