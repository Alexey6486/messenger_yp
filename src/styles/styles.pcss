* {
    box-sizing: border-box;
    font-family: Arial, serif;
    font-size: 14px;
}

*::placeholder {
    color: #bbbbbb;
    opacity: 1;
}

body {
    margin: 0;
}

h1, h2, h3, h4, h5, h6{
    margin: 0;
}

button{
    font: inherit;
    outline: none;
    border: 0;
    padding: 0;
    cursor: pointer;
    background-color: unset;
}

input {
    outline: none;
    border: 0;
}
